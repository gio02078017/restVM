                android:id="@+id/txtOferta2Cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@string/oferta2" />
        </TableRow>

    </TableLayout>

</LinearLayout>