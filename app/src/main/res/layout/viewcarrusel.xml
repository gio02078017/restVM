<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/texture"
    android:orientation="vertical" >

    <co.com.une.appmovilesune.components.TituloPrincipal
        android:id="@+id/tlpPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:shrinkColumns="*"
            android:stretchColumns="*" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:visibility="visible" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_span="3"
                    android:text="@string/documento"
                    android:textColor="@color/purple"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="5"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/txtDocumento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittextbg"
                        android:enabled="false"
                        android:inputType="textNoSuggestions"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:visibility="visible" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_span="3"
                    android:text="@string/direccion_points"
                    android:textColor="@color/purple"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="5"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/txtDireccion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittextbg"
                        android:enabled="false"
                        android:inputType="textNoSuggestions"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" >

                <ImageButton
                    android:id="@+id/consulta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_span="8"
                    android:background="@drawable/buttons"
                    android:contentDescription="@string/desc_finalizar"
                    android:onClick=""
                    android:src="@drawable/buttons_src" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" >

                <ListView
                    android:id="@+id/listacarrusel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="8" />
            </TableRow>

            <TableRow
                android:id="@+id/rowMensaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/mensajeCarrusel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_span="8"
                    android:text="@string/direccion_points"
                    android:textColor="@color/purple"
                    android:textStyle="bold" />
            </TableRow>
            
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" >

                <ListView
                    android:id="@+id/listacarrusel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="8" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>